extends layout

block content
  .container
    nav.navbar.fixed-top.navbar-toggleable-md.navbar-inverse
      .container
        button.navbar-toggler.navbar-toggler-right(type='button', data-toggle='collapse', data-target='#navbarMain')
          span.navbar-toggler-icon
        a.navbar-brand(href='/') LocalBites
        #navbarMain.navbar-collapse.collapse
          ul.navbar-nav.mr-auto
            li.nav-item
              a.nav-link(href='/about') About
            li.nav-item
              a.nav-link(href='/login') Login
            li.nav-item
              a.nav-link(href='/register') Register

    .row.banner
      .col-12
        h1 Register
        small &nbsp; Create your account

    .row
      .col-md-4.offset-md-4
        form(method='post', action='/register')
          .form-group
            label(for='username') Username
            input#username.form-control(type='text', name='username', required)
          .form-group
            label(for='email') Email
            input#email.form-control(type='email', name='email', required)
          .form-group
            label(for='password') Password
            input#password.form-control(type='password', name='password', required)
          button.btn.btn-primary(type='submit') Register
          p
            | Already have an account? 
            a(href='/login') Login here
